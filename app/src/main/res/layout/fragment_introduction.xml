<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Introduction"
    tools:context=".IntroductionFragment">

    <TextView
        android:id="@+id/textview_introduction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introduction_title"
        app:layout_constraintBottom_toTopOf="@id/imageview_introduction_tutorial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_introduction_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tutorial"
        android:contentDescription="@string/introduction_tutorial_description"
        app:layout_constraintBottom_toTopOf="@id/imageview_introduction_tutorial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_introduction_title" />

    <Button
        android:id="@+id/button_introduction_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introduction_next_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_introduction_tutorial" />
</androidx.constraintlayout.widget.ConstraintLayout>